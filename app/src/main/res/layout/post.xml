<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/postUserName"
            android:layout_width="195dp"
            android:layout_height="25dp"
            android:layout_above="@+id/postContent"
            android:layout_alignTop="@id/postImageView"
            android:layout_alignLeft="@id/postContent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="1dp"
            android:background="#0FFFFFFF"
            android:clickable="false"
            android:text="TextView"
            android:gravity="center"
            android:textColor="@color/fbutton_color_midnight_blue"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/postImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/colorGrey" />

        <TextView
            android:id="@+id/postContent"
            android:layout_width="195dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="1dp"
            android:layout_alignBottom="@id/postImageView"
            android:background="#ffffff"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/fbutton_color_midnight_blue"
            android:textColorHighlight="#0FFFFFFF" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>