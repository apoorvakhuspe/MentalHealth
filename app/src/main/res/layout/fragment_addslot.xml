<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_addFreeSlot"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="200dp"
            android:text="Date : "
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="200dp"
            android:drawableRight="@drawable/ic_event_black_24dp"
            android:text="Appointment Date "
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="250dp"
            android:text="Time : "
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/appointment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="250dp"
            android:drawableRight="@drawable/ic_alarm_black_24dp"
            android:text="Appointment Time"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="300dp"
            android:text="Location : "
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/appointment_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="290dp"
            android:hint="Address of location"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/add_to_db_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="410dp"
            android:background="#43B494"
            android:text="Add" />
    </FrameLayout>


</LinearLayout>